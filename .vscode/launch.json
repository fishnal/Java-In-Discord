{
    "version": "0.2.0",
    "configurations": [

        {
			"name": "Launch Node",
            "type": "node",
            "request": "launch",
			"program": "${file}",
			"internalConsoleOptions": "openOnSessionStart",
			"console": "externalTerminal"
		},
		{
			"name": "Launch TypeScript",
			"type": "node",
			"request": "launch",
			"args": [
				"${relativeFile}",
			],
			"runtimeArgs": [
				"-r",
				"ts-node/register"
			],
			"sourceMaps": true,
			"cwd": "${workspaceRoot}",
			"protocol": "inspector",
			"internalConsoleOptions": "openOnSessionStart",
			"console": "externalTerminal"
		}
    ]
}